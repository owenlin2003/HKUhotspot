<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for geolocation -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/hkuhotspotlogo"
        android:label="HKU Hotspot"
        android:roundIcon="@drawable/hkuhotspotlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.HKU_Hotspot_Frontend"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config"

        >
        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBv2lZosu4EsdBg5PEd_ZWIiumoQKF7QZA" />
        <activity android:name=".RegisterActivity"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".SettingsActivity"
            android:configChanges="uiMode|screenSize|orientation"/>
        <activity android:name=".PasswordActivity" />
        <activity android:name=".UsernameActivity" />
        <activity android:name=".RestaurantListActivity"/>
        <activity
            android:name=".MapsActivity"
            android:exported="true" />
        <activity android:name=".FilterActivity"/>
    </application>

</manifest>
